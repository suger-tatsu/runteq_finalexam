<% content_for :head do %>
  <meta property="og:title" content="<%= @group_assignment.title %> - 公開グループ分け" />
  <meta property="og:description" content="このグループ分けは、<%= @group_assignment.created_at.to_date %> に作成されました。" />
  <meta property="og:image" content="<%= image_url('ogp-group-share.jpg') %>" />
  <meta property="og:url" content="<%= request.original_url %>" />
  <meta property="og:type" content="article" />
<% end %>

<h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">
  <%= @group_assignment.title %> グループ分け結果
</h1>

<p class="text-center text-gray-600 mb-8">
  生徒人数: <%= @group_assignment.students.count %>人
</p>

<div class="max-w-2xl mx-auto space-y-8">
  <% @groups.each do |group| %>
    <div class="bg-white p-6 rounded shadow">
      <h2 class="text-xl font-semibold text-blue-600 mb-4 text-center"><%= group.name %></h2>

      <ul class="space-y-2">
        <% group.students.each do |student| %>
          <li class="border border-gray-300 rounded p-3 text-center"><%= student.name %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>