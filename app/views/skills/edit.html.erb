<%= form_with model: @skill, local: true do |form| %>
    <% if @skill.errors.any? %>
      <div id="error_explanation" class="bg-red-500 text-white p-4 rounded mb-4">
        <h2 class="font-bold"><%= pluralize(@skill.errors.count, "error") %> prohibited this skill from being saved:</h2>
        <ul>
          <% @skill.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="mb-4">
      <%= form.label :name, class: 'block font-bold mb-1' %>
      <%= form.text_field :name, class: 'border rounded w-full p-2' %>
    </div>
  
    <div class="mb-4">
      <%= form.label :student_ids, "生徒を選択", class: 'block font-bold mb-1' %>
      <%= form.collection_select :student_ids, Student.all, :id, :name, { selected: @skill.student_ids }, { multiple: true, class: 'border rounded w-full p-2' } %> <!-- 生徒を選択 -->
    </div>
  
    <div>
      <%= form.submit "更新", class: 'bg-blue-500 text-white font-bold py-2 px-4 rounded' %>
    </div>
  <% end %>