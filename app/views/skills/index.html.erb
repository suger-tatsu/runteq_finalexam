<%= render 'shared/header' %>
<div class="flex">
  <%= render 'shared/sidebar' %>
  <main class="flex-1 p-4">
    <h1 class="text-2xl mb-4">特技一覧</h1>
    <%= link_to '特技を追加する', new_skill_path, class: 'bg-green-500 text-white rounded p-2 mb-4' %>
    <table class="min-w-full bg-white border border-gray-300">
      <thead>
        <tr>
          <th class="px-4 py-2 border">特技名（特技名をクリックして編集）</th>
          <th class="px-4 py-2 border">アクション</th>
        </tr>
      </thead>
      <tbody>
        <% @skills.each do |skill| %>
          <tr>
            <td class="border px-4 py-2">
              <%= link_to skill.name, edit_skill_path(skill, teacher_id: @teacher&.id), class: 'text-blue-500' %>
            </td>
            <td class="border px-4 py-2">
              <%= button_to '削除', skill_path(skill), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'text-red-500' %> <!-- 削除ボタン -->
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </main>
</div>