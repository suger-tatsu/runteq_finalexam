<h1>新規登録</h1>
<%= form_with model: @teacher, local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div>
  <%= form.label :password_confirmation, "パスワードの確認" %>
  <%= form.password_field :password_confirmation %>
  </div>
  <div>
    <%= form.submit "登録" %>
  </div>
<% end %>