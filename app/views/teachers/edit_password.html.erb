<div class="max-w-md mx-auto p-6 bg-white shadow rounded">
  <h2 class="text-lg font-bold mb-4">パスワード変更</h2>

  <%= form_with scope: :teacher, url: update_teacher_password_path, method: :patch, local: true do |f| %>
    <div class="mb-4">
      <%= f.label :current_password, "現在のパスワード" %>
      <%= f.password_field :current_password, class: "w-full border rounded p-2" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, "新しいパスワード" %>
      <%= f.password_field :password, class: "w-full border rounded p-2" %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, "確認" %>
      <%= f.password_field :password_confirmation, class: "w-full border rounded p-2" %>
    </div>

    <%= f.submit "変更", class: "bg-blue-500 text-white px-4 py-2 rounded" %>
    <%= link_to "生徒一覧に戻る", students_path, class: "bg-gray-300 text-black px-4 py-2 rounded" %>
  <% end %>
</div>
