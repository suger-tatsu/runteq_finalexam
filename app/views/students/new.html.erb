<h1 class="text-2xl mb-4">生徒作成</h1>

<%= form_with(model: @student, local: true) do |form| %>
  <div class="mb-4">
    <%= form.label :name, class: "block" %>
    <%= form.text_field :name, class: "border rounded p-2 w-full" %>
  </div>
  <div class="mb-4">
    <%= form.label :gender, class: "block" %>
    <%= form.select :gender, [['男', '男'], ['女', '女']], class: "border rounded p-2 w-full" %>
  </div>
  <div class="mb-4">
    <%= form.label :height, class: "block" %>
    <%= form.number_field :height, class: "border rounded p-2 w-full", step: "0.1" %>
  </div>
  <div class="mb-4">
    <%= form.label :weight, class: "block" %>
    <%= form.number_field :weight, class: "border rounded p-2 w-full", step: "0.1" %>
  </div>
  <div class="mb-4">
    <%= form.label :athletic_ability, class: "block" %>
    <%= form.number_field :athletic_ability, class: "border rounded p-2 w-full", min: 0, max: 10 %>
  </div>
  <div class="mb-4">
    <%= form.label :leadership, class: "block" %>
    <%= form.number_field :leadership, class: "border rounded p-2 w-full", min: 0, max: 10 %>
  </div>
  <div class="mb-4">
    <%= form.label :cooperation, class: "block" %>
    <%= form.number_field :cooperation, class: "border rounded p-2 w-full", min: 0, max: 10 %>
  </div>
  <div class="mb-4">
    <%= form.label :science, class: "block" %>
    <%= form.number_field :science, class: "border rounded p-2 w-full", min: 0, max: 10 %>
  </div>
  <div class="mb-4">
    <%= form.label :humanities, class: "block" %>
    <%= form.number_field :humanities, class: "border rounded p-2 w-full", min: 0, max: 10 %>
  </div>
  <%= form.submit "作成", class: "bg-blue-500 text-white rounded p-2" %>
  <% if @student.errors.any? %>
  <div class="mb-4 text-red-600">
    <%= @student.errors.full_messages.join(', ') %>
  </div>
  <% end %>
<% end %>