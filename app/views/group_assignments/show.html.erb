<div class="max-w-4xl mx-auto p-6 bg-white shadow-md rounded-lg">
  <h1 class="text-2xl font-bold mb-6 text-center"><%= @group_assignment.title %> のグループ分け</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <% @groups.each do |group| %>
      <div class="border border-gray-300 rounded-lg p-4 shadow-sm bg-gray-50">
        <h2 class="text-xl font-semibold mb-2"><%= group.name %></h2>

        <% if group.students.any? %>
          <ul class="list-disc list-inside space-y-1">
            <% group.students.each do |student| %>
              <li><%= student.name %></li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-gray-500">このグループには生徒がいません。</p>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="mt-6 text-center">
    <%= link_to 'グループ一覧に戻る', group_assignments_path, class: "bg-green-500 text-white px-4 py-2 rounded" %>
    <%= link_to "共有設定", share_settings_group_assignment_path(@group_assignment), class: "bg-green-500 text-white px-4 py-2 rounded" %>

  </div>
</div>