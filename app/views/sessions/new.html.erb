<head>
  <link rel="stylesheet" href="styles.css"> <!-- 外部CSSファイルをリンク -->
</head>
<body>
  <h1 style="text-align: center;">ログイン</h1>

  <% if flash.now[:alert] %>
    <div class="bg-red-100 text-red-700 border border-red-300 p-4 mb-4 rounded text-center font-bold max-w-md mx-auto"><%= flash.now[:alert] %></div>
  <% end %>

  <div style="display: flex; flex-direction: column; align-items: center; margin-top: 20px; text-align: center;">
    <%= form_with(url: login_path, local: true) do |form| %>
      <div>
        <%= form.label :email, "メールアドレス" %>
        <%= form.email_field :email, required: true, class: 'input-field' %>
      </div>

      <div>
        <%= form.label :password, "パスワード" %>
        <%= form.password_field :password, required: true, class: 'input-field' %>
      </div>

      <div>
        <%= form.submit "ログイン", class: 'button' %>
      </div>
    <% end %>

    <!-- トップページに戻るボタン -->
    <%= link_to 'トップページに戻る', root_path, class: 'button' %>
  </div>
</body>